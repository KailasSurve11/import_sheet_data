<h3 class="text-center m-3"><strong><%= @company.company_name %></strong></h3>

<div class="d-flex align-item-center m-2">
	<div class="col-md-2"></div>
	<h3 class="col-md-8 text-center">Employees List</h3>
	<div class="col-md-2 mt-2">
		<%= link_to '<button type="button">Add Employee</button>'.html_safe, new_company_employee_path(@company) %>
		<%= link_to '<button type="button">Back</button>'.html_safe, companies_path %>
	</div>
	
</div>


<table class="table table-bordered">
  <thead>
    <tr>
      <th style="width: 5%">Id</th>
      <th style="width: 20%">Name</th>
      <th style="width: 10%">Gender</th>
      <th style="width: 20%">Email</th>
      <th style="width: 10%">Age</th>
      <th style="width: 15%">Contact no</th>
      <th style="width: 25%"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.gender %></td>
        <td><%= employee.email %></td>
        <td><%= employee.age %></td>
        <td><%= employee.contact_no %></td>
        <td><%= link_to '<button type="button">Show</button>'.html_safe, company_employee_path(@company,employee) %>
        <%= link_to '<button type="button">Edit</button>'.html_safe, edit_company_employee_path(@company, employee) %>
        <%= link_to '<button type="button">Destroy</button>'.html_safe, [@company,employee], method: :delete, data: { confirm: 'Are you sure delete this Employee?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



