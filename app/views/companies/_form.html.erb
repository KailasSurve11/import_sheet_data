<%= form_for(@company) do |f| %>

  <div class="field">
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name %>
    <p class='error text-danger'><%= show_errors(@company, :company_name) %></p>
  </div>
  <div class="field">
    <%= f.label :company_address %><br>
    <%= f.text_area :company_address %>
    <p class='error text-danger'><%= show_errors(@company, :company_address) %></p>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
